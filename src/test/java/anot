/* 
import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import io.github.bonigarcia.wdm.WebDriverManager;

import static org.junit.jupiter.api.Assertions.assertTrue;

public class LoginTest {

    private WebDriver driver;
    private WebElement usernameField;
    private WebElement passwordField;
    private WebElement loginButton;

    @BeforeEach
    public void setUp() {
        WebDriverManager.chromedriver().setup();
        driver = new ChromeDriver();
        driver.manage().window().maximize();
        driver.get("https://the-internet.herokuapp.com/login");
        
        // Encontra os elementos uma Ãºnica vez para uso em todos os testes
        usernameField = driver.findElement(By.id("username"));
        passwordField = driver.findElement(By.id("password"));
        loginButton = driver.findElement(By.xpath("//button[@type='submit']"));
    }

    @AfterEach
    public void tearDown() {
        if (driver != null) {
            driver.quit();
        }
    }

    @Test
    public void testSuccessfulLogin() {
        usernameField.sendKeys("tomsmith");
        passwordField.sendKeys("SuperSecretPassword!");
        loginButton.click();

        String successMessage = driver.findElement(By.id("flash")).getText();
        assertTrue(successMessage.contains("You logged into a secure area!"));
    }

    @Test
    public void testIncorrectUsernameCorrectPassword() {
        usernameField.sendKeys("usuario_incorreto");
        passwordField.sendKeys("SuperSecretPassword!");
        loginButton.click();

        String errorMessage = driver.findElement(By.id("flash")).getText();
        assertTrue(errorMessage.contains("Your username is invalid!"));
    }

    @Test
    public void testCorrectUsernameIncorrectPassword() {
        usernameField.sendKeys("tomsmith");
        passwordField.sendKeys("senha_incorreta");
        loginButton.click();

        String errorMessage = driver.findElement(By.id("flash")).getText();
        assertTrue(errorMessage.contains("Your username is invalid!"));
    }

    @Test
    public void testIncorrectUsernameIncorrectPassword() {
        usernameField.sendKeys("usuario_incorreto");
        passwordField.sendKeys("senha_incorreta");
        loginButton.click();

        String errorMessage = driver.findElement(By.id("flash")).getText();
        assertTrue(errorMessage.contains("Your username is invalid!"));
    }

    @Test
    public void testCorrectUsernameBlankPassword() {
        usernameField.sendKeys("tomsmith");
        passwordField.sendKeys("");
        loginButton.click();

        String errorMessage = driver.findElement(By.id("flash")).getText();
        assertTrue(errorMessage.contains("Your username is invalid!"));
    }

    @Test
    public void testIncorrectUsernameBlankPassword() {
        usernameField.sendKeys("usuario_incorreto");
        passwordField.sendKeys("");
        loginButton.click();

        String errorMessage = driver.findElement(By.id("flash")).getText();
        assertTrue(errorMessage.contains("Your username is invalid!"));
    }

    @Test
    public void testBlankUsernameCorrectPassword() {
        usernameField.sendKeys("");
        passwordField.sendKeys("SuperSecretPassword!");
        loginButton.click();

        String errorMessage = driver.findElement(By.id("flash")).getText();
        assertTrue(errorMessage.contains("Your username is invalid!"));
    }

    @Test
    public void testBlankUsernameIncorrectPassword() {
        usernameField.sendKeys("");
        passwordField.sendKeys("senha_incorreta");
        loginButton.click();

        String errorMessage = driver.findElement(By.id("flash")).getText();
        assertTrue(errorMessage.contains("Your username is invalid!"));
    }

    @Test
    public void testBlankUsernameBlankPassword() {
        usernameField.sendKeys("");
        passwordField.sendKeys("");
        loginButton.click();

        String errorMessage = driver.findElement(By.id("flash")).getText();
        assertTrue(errorMessage.contains("Your username is invalid!"));
    }
}

/* */